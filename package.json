{
  "name": "media-vault-serverless",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:layer": "sh scripts/build-sharp-layer.sh",
    "check:types": "tsc --noEmit",
    "ci": "npm run prettier:check && npm run lint && npm run check:types && npm test -- --run",
    "deploy": "sh scripts/deploy-process.sh",
    "deploy:dev": "npm run build:layer && serverless deploy --stage dev",
    "deploy:prod": "npm run build:layer && serverless deploy --stage prod",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "offline": "serverless offline start",
    "prettier:check": "npx prettier --check .",
    "prettier:fix": "npx prettier --write .",
    "test": "vitest --config vitest.config.ts",
    "localstack:up": "docker compose up -d",
    "localstack:down": "docker compose down",
    "docs:generate": "tsx scripts/generate-openapi.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@aws-sdk/client-dynamodb": "^3.987.0",
    "@aws-sdk/client-s3": "^3.987.0",
    "@aws-sdk/lib-dynamodb": "^3.987.0",
    "@aws-sdk/s3-request-presigner": "^3.988.0",
    "dotenv": "^17.2.4",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@prdev-solutions/eslint-config": "^2.5.4",
    "@serverless/event-mocks": "^1.1.1",
    "@types/aws-lambda": "^8.10.160",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.57.0",
    "serverless-offline": "^13.9.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
